<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:hardwareAccelerated="false"
    android:largeHeap="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="zi.objetivamobile.LaudoFotoActivity"
    tools:showIn="@layout/activity_laudo_foto">

    <LinearLayout
        android:id="@+id/ln_grid_laudo"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <GridView
            android:id="@+id/grid_laudos"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="15"
            android:columnWidth="120dp"
            android:gravity="center"
            android:horizontalSpacing="5dp"
            android:numColumns="2"
            android:padding="2dp"
            android:stretchMode="columnWidth"
            android:verticalSpacing="15dp" />

            <Button
                android:id="@+id/btn_check_list"
                android:layout_weight="2"
                android:layout_below="@id/grid_laudos"
                android:text="Check List"
                android:background="@color/colorObjetivaVerde"
                android:textColor="@color/colorObjetivaBranco"
                android:onClick="doCheckList"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="60dp" />


    </LinearLayout>


</LinearLayout>
